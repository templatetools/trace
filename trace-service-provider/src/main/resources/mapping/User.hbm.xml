<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.food.safety.trace.entity">
    <class name="UserEntity" entity-name="user_entity">
        <meta attribute="class-description">用户信息</meta>

        <id name="id"
            length="128" type="string">
            <meta attribute="field-description">id</meta>
            <generator class="uuid.hex" />
        </id>

        <property name="name" type="string" length="8">
            <meta attribute="use-in-tostring">true</meta>
            <meta attribute="field-description">用户名</meta>
        </property>

        <property name="loginName" column="login_name" type="string" length="16">
            <meta attribute="use-in-tostring">true</meta>
            <meta attribute="field-description">登录用户名</meta>
        </property>

        <property name="password" type="string" length="16">
            <meta attribute="field-description">登录密码</meta>
        </property>
    </class>
</hibernate-mapping>
